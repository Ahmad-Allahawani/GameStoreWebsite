@model aspPro2.Models.Students
@{
    ViewData["Title"] = "login";
    Layout = null;
}

<head>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/login.css" />
</head>
<section>
    <div class="form-box">
        <div class="form-value">
            <form asp-action="login" method="post">
                <h2>Login</h2>
                <div class="inputbox">
                    <ion-icon name="mail-outline"></ion-icon>
                    <input asp-for="Id" type="text" required />
                    <label asp-for="Id">Student ID</label>
                </div>
                <div class="inputbox">
                    <ion-icon name="lock-closed-outline"></ion-icon>
                    <input asp-for="password" type="password" required />
                    <label asp-for="password">Password</label>
                </div>
                <div class="forget">
                    <label for=""><input type="checkbox" />Remember Me<a href="#">Forget Password</a></label>
                </div>
                <div>
                    <button type="submit">Log in</button>
                </div>
                <div class="register">
                    <p>Don't have a account? <a href="StudentController1/register">Register</a></p>
                </div>
            </form>
        </div>
    </div>
</section>
<script type="module"
        src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

